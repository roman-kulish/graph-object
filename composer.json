{
  "name": "romanko/object-graph",
  "type": "library",
  "description": "A data mapper to be used with JSON objects, which allows to shape different versions of the payload to a value object with predefined set of properties",
  "keywords": [
    "json",
    "object-graph",
    "mapper"
  ],
  "homepage": "https://github.com/roman-kulish/object-graph",
  "license": "MIT",
  "authors": [
    {
      "name": "Roman Kulish",
      "email": "roman.kulish@gmail.com"
    }
  ],
  "require": {
    "php": "^7.0",
    "flow/jsonpath": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.5",
    "squizlabs/php_codesniffer": "^3.2"
  },
  "autoload": {
    "psr-4": {
      "ObjectGraph\\": "src/ObjectGraph"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ObjectGraph\\": "tests/ObjectGraph"
    }
  },
  "minimum-stability": "dev",
  "scripts": {
    "test": "phpunit",
    "phpcs": "phpcs"
  }
}
